{
    "data": {
        "training_list": "training-list.lst",
        "validation_list": "validation-list.lst"
    },

    "training": {
        "epochs": 10,
        "batchsize": 1000,
        "checkpoint": "checkpoint.pt",
        "loss": "CrossEntropy"
	},
    
    "post": {
        "model": "Turner",
        "max_helix_length": 30
    },
    
    "optimizer": {
        "optimizer": "Adam",
        "params": {
            "lr": 1e3,
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
        
    "layers": [
        {
            "module": "torch.nn",
            "class": "Conv2d",
            "kwargs": {
                "in_channels": 8,
                "out_channels": 128, 
                "kernel_size": 5,
                "padding": 2
            }
        },
        {
            "module": "torch.nn",
            "class": "ReLU",
            "kwargs": {}
        },
        {
            "module": "torch.nn",
            "class": "Dropout",
            "kwargs": {
                "p": 0.2
            }
        },
        {
            "module": "torch.nn",
            "class": "BatchNorm2d",
            "kwargs": {
                "num_features": 128
            }
        },

        {
            "module": "torch.nn",
            "class": "Conv2d",
            "kwargs": {
                "in_channels": 128,
                "out_channels": 1, 
                "kernel_size": 1,
                "padding": 0
            }
        },
        {
            "module": "torch.nn",
            "class": "ReLU",
            "kwargs": {}
        },
        {
            "module": "torch.nn",
            "class": "Dropout",
            "kwargs": {
                "p": 0.2
            }
        },
        {
            "module": "torch.nn",
            "class": "BatchNorm2d",
            "kwargs": {
                "num_features": 1
            }
        },

        {
            "module": "torch.nn",
            "class": "Sigmoid",
            "kwargs": {}		
        },

        {
            "module": "kirigami.nn.Maximizer",
            "class": "Maximizer",
            "kwargs": {}
        }
    ]
}
