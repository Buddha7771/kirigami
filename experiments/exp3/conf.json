{
    "resume": false,

    "data": {
        "training_list": "training-list.lst",
        "validation_list": "validation-list.lst",
        "batch_size": 1,
        "shuffle": true
    },

    "training": {
        "epochs": 10,
        "checkpoint": "checkpoint.pt"
    },

    "loss_func": {
        "class": "CrossEntropyLoss",
        "params": {}
    },

    "post": {
        "model": "Turner",
        "max_helix_length": 30
    },
    
    "optim": {
        "class": "Adam",
        "params": {
            "lr": 1e3,
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
        
    "model": [
        {
            "class": "kirigami.nn.SPOT.BlockA",
            "kwargs": {
                "p": 0.1
            }
        },
        {
            "class": "torch.nn.Conv2d",
            "kwargs": {
                "in_channels": 8,
                "out_channels": 1,
                "kernel_size": 1
            }
        },
        {
            "class": "torch.nn.Sigmoid",
            "kwargs": {}		
        },
        {
            "class": "kirigami.nn.Maximizer.Maximizer",
            "kwargs": {}
        }
    ]
}
