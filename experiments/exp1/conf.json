{
    "data": {
        "training_list": "training-list.lst",
        "validation_list": "validation-list.lst"
    },

	"training": {
		"epochs": 10,
		"batchsize": 1000,
        "checkpoint": "checkpoint.pt",
		"loss": "CrossEntropy"
	},
    
    "post": {
        "model": "Turner",
        "max_helix_length": 30
    },
    
    "optimizer": {
        "optimizer": "Adam",
        "params": {
            "lr": 1e3,
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
        
    "layers": [
        {
            "layer": "Conv2d",
            "params": {
                "in_channels": 8,
                "out_channels": 128, 
                "kernel_size": 5,
                "padding": 2
            }
        },
		{
			"layer": "Conv2d",
			"params": {
				"in_channels": 128,
				"out_channels": 1,
				"kernel_size": 1,
				"padding": 0
			}
		},
		{
		    "layer": "Sigmoid",
		    "params": {}		
		}
	]
}
